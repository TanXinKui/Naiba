<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="#00a2e9">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="110dp"
                android:src="@drawable/xhr1" />

            <TextView
                android:id="@+id/login_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/login_name"
                android:layout_centerHorizontal="true"
                android:background="@drawable/appname"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="60dp" />

            <EditText
                android:id="@+id/login_name"
                android:layout_width="100pt"
                android:layout_height="20pt"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#FFF"
                android:gravity="center"
                android:hint="请输入账户名"
                android:textColorHint="#00a2e9" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/relativeLayout1"
            android:background="#FFF">

            <TextView
                android:layout_width="85pt"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout2"
            android:background="#fff">

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="100pt"
                android:layout_height="20pt"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#FFF"
                android:gravity="center"
                android:hint="请输入密码！"
                android:inputType="textPassword"
                android:textColorHint="#00a2e9" />

            <Button
                android:id="@+id/login_2_2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/login_pass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#00a2e9"
                android:text="登陆"
                android:textColor="#fff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/locate"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_below="@id/login_pass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/login_resgister"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/login_2_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:text="注册"
                android:textColor="#00a2e9"
                android:textSize="22dp" />
            <!--  <Button
                  android:layout_below="@id/login_resgister"
                  android:id="@+id/login_2_1"
                  android:layout_width="200dp"
                  android:layout_height="50dp"
                  android:background="#e2c290"
                  android:layout_marginTop="20dp"
                  android:layout_centerHorizontal="true"
                  android:text="游客登陆"
                  android:textColor="#FFF"
                  android:textSize="30dp" />-->

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>