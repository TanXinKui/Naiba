<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/forsearch_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/search_board"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="#1000"
            android:hint="搜索好评"
            android:imeOptions="actionSearch"
            android:maxLength="18"
            android:singleLine="true"
            android:textSize="15dp" />

        <Button
            android:id="@+id/main_next"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignRight="@+id/search_board"
            android:background="#1000"
            android:text="搜索" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forsearch_layout_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forsearch_layout_1">

        <TextView
            android:id="@+id/fl21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜索历史"
            android:textColor="#000"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/history1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl21"
            android:text="" />

        <TextView
            android:id="@+id/history2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history1"
            android:text="" />

        <Button
            android:id="@+id/clear_history"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/history2"
            android:background="#1000"
            android:text="清除"
            android:textSize="15dp"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/listview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clear_history"></ListView>
    </RelativeLayout>

</RelativeLayout>